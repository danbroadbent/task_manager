<div class="page-header">
  <h1>All Tasks</h1>
</div>

<% @tasks.each do |task| %>
<div class="row">
    <div class="col-xs-2">
      <h2>Task ID</h2>
      <h3><%= task.id %></h3>
    </div>
    <div class="col-xs-10">
      <h2>Task</h2>
      <h3><a href="/tasks/<%= task.id %>"><%= task.title %></a></h3>
    </div>
  </div>
<% end %>
